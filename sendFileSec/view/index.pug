doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Index
    body 
        include ./includes/header.pug
        h2 Input the code 
        form(action="/file" method="POST", enctype="multipart/form-data")
            input(type="file" name='file')
            hr
            if(locals.handleError != null && locals.handleError != '')
                label(for="a") #{locals.handleError}
            else
                label(for="a") Input the Code
            br
            input(type="number" name='code' value=file.code)
            br
            label(for="b") Input the password
            br
            input(type="password" id='b' name='password' value=file.password)
            input(type="submit" value='submit')